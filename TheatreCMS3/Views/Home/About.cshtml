
@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* GLOBAL FOR THIS PAGE ONLY */
    body {
        background-color: #000;
    }

    .about-wrapper {
        text-align: center;
        color: #ffffff;
        font-family: 'Oswald', Arial, sans-serif;
    }

    /* Base section spacing */
    .about-band {
        width: 100%;
        margin: 0;
        padding: 42px 15px;
        position: relative;
    }

    /* HERO SECTION */
    .about-hero {
        background: url('@Url.Content("~/Content/images/theater.jpg")') center center no-repeat;
        background-size: cover;
        padding: 120px 15px 80px;
        font-family: 'broadway', 'Times New Roman', serif;
        font-size: 48px;
        letter-spacing: 2px;
        text-shadow: 0 2px 6px rgba(0,0,0,0.7);
    }

    /* BLACK + CORAL BANDS */
    .about-band--black {
        background-color: #000000;
    }

    .about-band--coral {
        background-color: #000; /* keep the band background black */
        color: #ffffff;
    }

    .about-band h2 {
        text-transform: uppercase;
        font-size: 20px;
        letter-spacing: 2px;
        margin-bottom: 16px;
    }

    .about-band--black p {
        max-width: 750px;
        margin: 0 auto 10px;
        font-size: 14px;
        line-height: 1.7;
        opacity: 0.95;
    }

    .about-history-inner {
        max-width: 900px;
        margin: 0 auto;
    }

    /* AUTO-WIDTH UNDERLINE THAT MATCHES THE TEXT */
    .about-section-title {
        display: inline-block;
        position: relative;
        padding-bottom: 10px;
    }

    .about-section-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 4px;
        background-color: #b30000;
        border-radius: 2px;
    }

    /* NEW: Centered panel (fixes the “glitchy square” look) */
    .about-panel {
        max-width: 1100px;
        margin: 0 auto;
        padding: clamp(28px, 4vw, 52px) clamp(18px, 3vw, 44px);
        border-radius: 22px;
        overflow: hidden;   /* prevents curve artifacts */
        isolation: isolate; /* prevents z-index/pseudo-element weirdness */
        box-shadow: 0 18px 60px rgba(0,0,0,.45);
        border: 1px solid rgba(255,255,255,.12);
    }

    .about-panel--coral {
        background: #ff5a5a;
        color: #ffffff;
        position: relative;

    }

    /* Optional: nice theatrical curves, but clean */
    .about-panel--coral::before,
    .about-panel--coral::after {
        content: "";
        position: absolute;
        left: -10%;
        right: -10%;
        height: 60px;
        background: inherit;
        pointer-events: none;
    }

    .about-panel--coral::before {
        top: -30px;
        border-bottom-left-radius: 50% 100%;
        border-bottom-right-radius: 50% 100%;
    }

    .about-panel--coral::after {
        bottom: -30px;
        border-top-left-radius: 50% 100%;
        border-top-right-radius: 50% 100%;
    }

    /* Coral text layout */
    .about-panel--coral p {
        max-width: 70ch;
        margin: 0 auto 12px;
        font-size: 16px;
        line-height: 1.75;
        opacity: 0.98;
    }

    /* ENSEMBLE ROW */
    .about-ensemble-images {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        margin-top: 30px;
    }

    .about-ensemble-images img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #ffffff;
        box-shadow: 0 10px 30px rgba(0,0,0,.35);
    }

    .about-ensemble-name {
        margin-top: 8px;
        font-size: 12px;
        opacity: 0.95;
    }

    /* BOARD SECTION */
    .about-board-list {
        margin-top: 10px;
        font-size: 14px;
        line-height: 1.8;
        opacity: 0.95;
    }

    /* White divider line between Ensemble and Board */
    .about-divider {
        height: 2px;
        background-color: rgba(255,255,255,.9);
        width: min(80%, 1100px);
        margin: 0 auto;
    }

    /* 1) Make default section padding a bit tighter */
    .about-band {
        padding: 40px 15px; /* was 60px */
    }

        /* 2) Reduce the gap ONLY between stacked sections (black → coral, coral → black) */
        .about-band + .about-band {
            padding-top: 22px; /* controls the “space between headers/sections” */
        }

    /* 3) The coral band doesn’t need as much padding because the panel already has padding */
    .about-band--coral {
        padding-top: 22px;
        padding-bottom: 22px;
    }

    /* 4) Remove extra browser-default spacing above headings */
    .about-band h2 {
        margin-top: 0;
        margin-bottom: 16px;
    }

    /* 5) Optional: tighten paragraph spacing a touch */
    .about-band p {
        margin-top: 0;
        margin-bottom: 10px;
    }

    /* Tighten spacing right after the hero */
    .about-hero + .about-band {
        padding-top: 28px;
        padding-bottom: 28px;
    }


</style>

<div class="about-wrapper">

    <!-- HERO / TITLE -->
    <section class="about-band about-hero">
        <h1>About Us</h1>
    </section>

    <!-- WHO WE ARE -->
    <section class="about-band about-band--black">
        <h2 class="about-section-title">Who We Are</h2>
        <p>
            To engage audiences through ensemble-driven productions with a focus on developing new works.
        </p>
    </section>

    <!-- COMPANY HISTORY (UPDATED: centered coral panel, no glitchy full-width shape) -->
    <section class="about-band about-band--coral">
        <div class="about-panel about-panel--coral">
            <div class="about-history-inner">
                <h2 class="about-section-title">Company History</h2>

                <p>
                    In 1997, Theatre Vertigo was founded by Paul Floding, Nanette Pettit and Jeff Meyers.
                    Since then, Theatre Vertigo has performed in numerous spaces including The Russell Street Theater,
                    The Electric Company, Theater!Theatre!, and The Shoebox Theater.
                </p>

                <p>
                    From 2003 to 2014, Theatre Vertigo produced Anonymous Theatre as a summer fundraiser in collaboration
                    with The Anonymous Theatre Company. Other past collaborations include defunkt theatre, Stark Raving Theater,
                    and Tears of Joy Theatre.
                </p>

                <p>
                    Theatre Vertigo has worked on world premieres including <em>Faust.Us</em> by Joseph Fisher,
                    and <em>The End of Sex</em> by Craig Jessen.
                </p>

                <p>
                    In 2016, Theatre Vertigo produced its first officially commissioned work from a playwright,
                    <em>I Want To Destroy You</em>, by Rob Handel.
                </p>
            </div>
        </div>
    </section>

    <!-- ENSEMBLE -->
    <section class="about-band about-band--black">
        <h2 class="about-section-title">Ensemble</h2>

        <div class="about-ensemble-images">

            <div>
                <img src="@Url.Content("~/Content/images/Profile_1.jpg")" alt="Tom Mounsey" />
                <div class="about-ensemble-name">Tom Mounsey</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_2.jpg")" alt="Kaia Maarja Hiller" />
                <div class="about-ensemble-name">Kaia Maarja Hiller</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_3.jpg")" alt="Heath Hyun Houghton" />
                <div class="about-ensemble-name">Heath Hyun Houghton</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_5.jpg")" alt="Jacquelle Davis" />
                <div class="about-ensemble-name">Jacquelle Davis</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_4.jpg")" alt="Victoria Alvarez-Chacon" />
                <div class="about-ensemble-name">Victoria Alvarez-Chacon</div>
            </div>

        </div>
    </section>

    <!-- white divider between Ensemble and Board -->
    <div class="about-divider"></div>

    <!-- BOARD -->
    <section class="about-band about-band--black">
        <h2 class="about-section-title">Board</h2>

        <div class="about-board-list">
            <div>Jamie Floyd (President)</div>
            <div>Marcia Reyes</div>
            <div>Lena Liis-Kiesel</div>
        </div>
    </section>
</div>


